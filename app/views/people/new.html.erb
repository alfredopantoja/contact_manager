<% provide(:title, 'Create new person') %>
<h1>Create new person</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@person) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.submit "Create new person", class: "btn btn-large btn-primary" %>
    <% end %>  
  </div>
</div>  
